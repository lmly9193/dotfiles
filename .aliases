alias reload!='. ~/.bashrc'

alias clr='clear'
alias cls='clear'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias ~='cd ~'
alias -- -='cd -'

alias ls='exa -aF $LS_OPTIONS'
alias ll='exa -lahF --git --color-scale $LS_OPTIONS'
alias grep='grep --color=auto'

alias rm='rm -iv'
alias cp='cp -iv'
alias mv='mv -iv'

alias mkdir='mkdir -pv'
alias rmdir='rm -r'

alias df='df -h'
alias du='du -h -c'

alias top='htop'
alias vi='vim'
alias myip='curl https://ipinfo.io/ip'
alias myinfo='curl https://ipinfo.io/json'
alias bench='curl -Lso- bench.sh | bash'
